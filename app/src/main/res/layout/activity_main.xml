            android:src="@drawable/arrow_right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.293"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.751" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/obstacle1Group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toTopOf="@+id/arrowForward"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/obstacle1Box"
                android:layout_width="34px"
                android:layout_height="34px"
                android:layout_marginBottom="32dp"
                android:src="@drawable/obstacle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/obstacle1Face"
                android:layout_width="34px"
                android:layout_height="34px"
                android:layout_marginBottom="32dp"
                android:src="@drawable/obstacle_face"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/obstacle1ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal|top"
                android:text="@string/obstacle1ID_text"
                android:textColor="#FFFFFF"
                android:textSize="8sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/obstacle3Group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/obstacle2Group"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/obstacle3Box"
                android:layout_width="34px"
                android:layout_height="34px"
                android:src="@drawable/obstacle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
